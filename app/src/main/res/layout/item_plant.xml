<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="#FFFFFF"
    android:layout_marginBottom="12dp"
    android:elevation="2dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/plantImageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_plant_placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/plantNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plant Name"
            android:textSize="18sp"
            android:textColor="#6D9886"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/waterTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water in: 2 days"
            android:textSize="14sp"
            android:textColor="#888888" />
    </LinearLayout>

    <ImageView
        android:id="@+id/waterButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_jug"
        android:contentDescription="Water" />
</LinearLayout>
